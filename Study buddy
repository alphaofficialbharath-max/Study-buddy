import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.net.HttpURLConnection;
import java.net.URL;

public class StudyBuddyBackend {

    // 1. Get your free key from: https://aistudio.google.com/
    private static final String API_KEY = "YOUR_FREE_GEMINI_API_KEY";
    private static final String API_URL = "https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent?key=" + API_KEY;

    public static void main(String[] args) {
        // Example: This is what the student typed in your HTML
        String studentInput = "Explain why the sky is blue for a 10th grader";
        
        String response = callAI(studentInput);
        System.out.println("AI Response: " + response);
    }

    public static String callAI(String userPrompt) {
        try {
            URL url = new URL(API_URL);
            HttpURLConnection conn = (HttpURLConnection) url.openConnection();
            conn.setRequestMethod("POST");
            conn.setRequestProperty("Content-Type", "application/json");
            conn.setDoOutput(true);

            // 2. Prepare the data to send to AI
            // We tell the AI to act specifically as a 10th grade teacher
            String jsonInputString = "{"
                + "\"contents\": [{"
                + "  \"parts\":[{\"text\": \"You are a helpful 10th grade teacher. Explain this simply: " + userPrompt + "\"}]"
                + "}]"
                + "}";

            try (OutputStream os = conn.getOutputStream()) {
                byte[] input = jsonInputString.getBytes("utf-8");
                os.write(input, 0, input.length);
            }

            // 3. Read the response
            BufferedReader br = new BufferedReader(new InputStreamReader(conn.getInputStream(), "utf-8"));
            StringBuilder response = new StringBuilder();
            String responseLine;
            while ((responseLine = br.readLine()) != null) {
                response.append(responseLine.trim());
            }

            return response.toString(); // This returns the AI's answer

        } catch (Exception e) {
            return "Error: " + e.getMessage();
        }
    }
}
